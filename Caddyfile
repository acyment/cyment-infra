# Postiz service (uses port 3000 as single entry point)
postiz.cyment.com {
    reverse_proxy postiz:3000
    encode gzip
}

# Group Timer / PocketBase service
group-timer.cyment.com {
    reverse_proxy pocketbase:8090
    encode gzip
}

# Default catch-all for future subdomains
*.cyment.com {
    respond "Service not configured" 404
}